<script>
    var pagedListUrl = "/Questionnaire/CrossAnalysisList";
    $(".btnCrossSearch").click(function () {
        var questionAId = $("select[name=questionAId] option:selected").val();
        if (questionAId == "0" || questionAId == null || questionAId == "" || questionAId == undefined) {
            alert("请选择问题A");
            return false;
        }
        var questionBId = $("select[name=questionBId] option:selected").val();
        if (questionBId == "0" || questionBId == null || questionBId == "" || questionBId == undefined) {
            alert("请选择问题B");
            return false;
        }
        LoadPageBar(pagedListUrl, "Pagination", 0);
    });

</script>
