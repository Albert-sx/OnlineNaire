        <ul class="list-group">
            <li class="list-group-item">
                <form class="form-inline" id="formSearch">
                    <!-- 当前页码 -->
                    <input type="hidden" name="pageIndex" id="pageIndex" value="1" />
                    <input type="hidden" name="questionnaireId" id="questionnaireId" value="12954" />

                    <div class="form-group">
                        问题A:
                        <select name="questionAId" class="form-control" style="width:340px;">
